<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/student_login_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Login"
        android:textAlignment="center"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <EditText
        android:id="@+id/student_login_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Username"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/student_login_text"
        app:layout_constraintEnd_toEndOf="@id/student_login_text"
        app:layout_constraintTop_toBottomOf="@id/student_login_text" />

    <EditText
        android:id="@+id/stusent_login_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:hint="Password"
        app:layout_constraintStart_toStartOf="@id/student_login_username"
        app:layout_constraintEnd_toEndOf="@id/student_login_username"
        app:layout_constraintTop_toBottomOf="@id/student_login_username" />

    <Button
        android:id="@+id/stusent_login_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/stusent_login_password"
        app:layout_constraintEnd_toEndOf="@id/stusent_login_password"
        app:layout_constraintTop_toBottomOf="@id/stusent_login_password" />


</androidx.constraintlayout.widget.ConstraintLayout>